<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/health_background1"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="fitStart"
        android:src="@drawable/mobidoc"
        android:textAlignment="center" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/action_bar"
            android:layout_width="103dp"
            android:layout_height="111dp"
            android:layout_alignLeft="@+id/settingseViewText"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/settingseViewText"
            android:layout_gravity="left|center_vertical"
            android:onClick="goToSettings"
            android:scaleType="fitStart"
            android:src="@drawable/settings"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/tests"
            android:layout_width="103dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|top"
            android:onClick="goToTests"
            android:scaleType="fitStart"
            android:src="@drawable/tests"
            android:textAlignment="center" />


    </FrameLayout>


</RelativeLayout>