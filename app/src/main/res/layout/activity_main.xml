<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/health_background1"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="fitStart"
        android:src="@drawable/mobidoc"
        android:textAlignment="center" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tests"
            android:layout_width="103dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|top"
            android:onClick="goToTests"
            android:scaleType="fitStart"
            android:src="@drawable/tests"
            android:textAlignment="center" />

        <TextView
            android:layout_width="174dp"
            android:layout_height="148dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Projections\n Test"
            android:id="@+id/textView6"
            android:layout_gravity="left|top"
            android:gravity="bottom" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Web Test"
            android:id="@+id/textView7"
            android:layout_gravity="right|top"
            android:gravity="bottom|center_horizontal" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:id="@+id/imageView"
            android:layout_gravity="right|top"
            android:src="@drawable/communication"
            android:onClick="goToWebTests" />

        <ImageView
            android:id="@+id/action_bar"
            android:layout_width="83dp"
            android:layout_height="89dp"
            android:layout_alignLeft="@+id/settingseViewText"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/settingseViewText"
            android:layout_gravity="right|bottom"
            android:onClick="goToSettings"
            android:scaleType="fitStart"
            android:src="@drawable/settings"
            android:textAlignment="center" />

        <TextView
            android:layout_width="178dp"
            android:layout_height="251dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Guide Line"
            android:id="@+id/textView4"
            android:layout_gravity="left|bottom"
            android:gravity="bottom|center_horizontal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="108dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|bottom"
            android:onClick="startGuideLine"
            android:scaleType="fitStart"
            android:src="@drawable/stargl"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settings"
            android:id="@+id/textView5"
            android:layout_gravity="bottom|center_vertical|right"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:id="@+id/measureIMG"
            android:onClick="measureClick"
            android:src="@drawable/logbook"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="91dp"
            android:layout_height="191dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Measures History"
            android:id="@+id/textView17"
            android:layout_gravity="center"
            android:gravity="bottom|center_vertical"
            android:textSize="20dp" />


    </FrameLayout>


</RelativeLayout>
