<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen">



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:scaleType="fitStart"
        android:src="@drawable/mobidoclogo1"
        android:textAlignment="center" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/action_bar"
            android:layout_width="106dp"
            android:layout_height="114dp"
            android:layout_alignLeft="@+id/settingseViewText"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/settingseViewText"
            android:layout_gravity="right|bottom"
            android:onClick="goToSettings"
            android:scaleType="fitStart"
            android:src="@drawable/setings2"
            android:textAlignment="center" />

        <TextView
            android:layout_width="97dp"
            android:layout_height="107dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settings"
            android:id="@+id/textView5"
            android:layout_gravity="bottom|center_vertical|right"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="393dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="simulation"
            android:id="@+id/textView6"
            android:layout_gravity="left|bottom"
            android:gravity="bottom|center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tests"
            android:layout_width="97dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|bottom"
            android:onClick="goToTests"
            android:scaleType="fitStart"
            android:src="@drawable/tests"
            android:textAlignment="center" />

        <TextView
            android:layout_width="117dp"
            android:layout_height="161dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Guide Line"
            android:id="@+id/textView4"
            android:layout_gravity="left|top"
            android:gravity="bottom|center_horizontal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="108dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|top"
            android:onClick="startGuideLine"
            android:scaleType="fitStart"
            android:src="@drawable/play2"
            android:textAlignment="center" />

        <TextView
            android:layout_width="116dp"
            android:layout_height="158dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Log  Book"
            android:id="@+id/textView17"
            android:layout_gravity="right|top"
            android:gravity="bottom|center_vertical"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:id="@+id/measureIMG"
            android:onClick="measureClick"
            android:src="@drawable/logbook2"
            android:layout_gravity="right|top" />


    </FrameLayout>


</RelativeLayout>
