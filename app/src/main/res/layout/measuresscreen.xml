<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/measurelayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/health_background1"
    tools:context="com.example.mobidoc.Screens.MeasuresScreen">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:id="@+id/buttons"
        tools:context="com.example.mobidoc.Screens.MeasuresScreen">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:text="insert BP manually"
        android:id="@+id/insertbp"
        />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="insert ketanuria manually"
        android:id="@+id/insertketanuria"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert BG manually"
        android:id="@+id/insertbg"/>

        </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

