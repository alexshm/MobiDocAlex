<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_centerInParent="true"
    android:background="@android:color/transparent">

    <AbsoluteLayout
        android:layout_width="371dp"
        android:layout_height="437dp"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:background="#ff12a9e6"
        android:layout_x="101dp"
        android:layout_y="165dp"
        android:layout_gravity="center"
        android:id="@+id/layout">
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />


        <Button
            android:id="@+id/Done"
            android:layout_width="141dp"
            android:layout_height="65dp"
            android:onClick="done"
            android:background="#ffe9e9e9"
            android:text="Done"
            android:layout_x="99dp"
            android:textSize="20dp"
            android:layout_y="359dp" />
        <EditText
            android:id="@+id/value"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:background="#fffffbff"
            android:inputType="number|text|numberSigned|numberDecimal"
            android:layout_x="120dp"
            android:layout_y="85dp"
            android:textSize="18dp"
            android:textIsSelectable="True"
            android:autoText="false"
            android:singleLine="true" />

        <TextView
            android:id="@+id/message"
            android:layout_width="272dp"
            android:layout_height="54dp"
            android:textColor="#ff113732"
            android:text="Message"
            android:layout_x="56dp"
            android:layout_y="4dp"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ValuetextView10"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:textColor="#ff123733"
            android:text="Value:"
            android:layout_x="33dp"
            android:layout_y="81dp"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/DatetextView10"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:textColor="#ff123733"
            android:text="Date :"
            android:layout_x="35dp"
            android:layout_y="157dp"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/TimetextView10"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:textColor="#ff123733"
            android:text="Time:"
            android:layout_x="34dp"
            android:layout_y="118dp"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/timePickedText"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:background="#fffffbff"
            android:layout_x="119dp"
            android:layout_y="123dp"
            android:textSize="18dp"
            android:onClick="changeTime"
            android:textIsSelectable="false"
            android:autoText="false" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:id="@+id/datePicker"
            android:layout_x="1dp"
            android:layout_y="197dp"
            android:background="#002a90c2" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_x="102dp"
            android:visibility="invisible"
            android:layout_y="150dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitBtton"
            android:layout_x="320dp"
            android:layout_y="1dp"
            android:src="@drawable/Close"
            android:onClick="exit" />

    </AbsoluteLayout>
</FrameLayout>